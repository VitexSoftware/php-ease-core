#!/bin/sh

#DEBHELPER#

# postinst script for php-vitexsoftware-ease-core-dev
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        composer-debian php-vitexsoftware-ease-core-dev
        # Ensure test i18n directories exist
        mkdir -p /usr/share/php/EaseCore/Test/i18n/cs_CZ/LC_MESSAGES/
        mkdir -p /usr/share/php/EaseCore/Test/i18n/en_US/LC_MESSAGES/
        mkdir -p /usr/share/php/EaseCore/Test/i18n/eo/LC_MESSAGES/
        
        # Ensure test i18n .mo files exist (compile from .po if necessary)
        if [ -d /usr/share/php/EaseCore/Test/i18n ]; then
            if command -v msgfmt >/dev/null 2>&1; then
                # First create any missing parent directories
                find /usr/share/php/EaseCore/Test/i18n -type f -name 'php-vitexsoftware-ease-core.po' -print0 | \
                    xargs -0 -r -I{} mkdir -p $(dirname "{}")
                
                # Then compile .po files to .mo
                find /usr/share/php/EaseCore/Test/i18n -type f -name 'php-vitexsoftware-ease-core.po' -print0 | \
                    xargs -0 -r -I{} sh -c 'dest="$(dirname "{}")/php-vitexsoftware-ease-core.mo"; msgfmt -o "$dest" "{}" || true'
            fi
        fi
        # Run test suite as web/composer user
        su -s /bin/bash `composer-webuser` -c 'cd /usr/share/php/EaseCore/Test && phpunit --bootstrap /usr/share/php/EaseCore/Test/Bootstrap.php --configuration /usr/share/php/EaseCore/Test/phpunit.xml'
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0

#DEBHELPER#
